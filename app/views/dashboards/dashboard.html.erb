      <div class="message-name">
        <h3>
          <%= hideout.name %>
        </h3>
      </div>
      <div class="message-date">
        <p><strong>
          <%= booking.checkin %>
        </strong></p>
        <p>
          <%= booking.checkout %>
        </p>
      </div>
      <div class="message-body">
        <%= hideout.description %>
      </div>
      <div class="message-price">
        <%= hideout.price %>
      </div>
      <div class="message-status">
        <%= owner.email %>
      </div>
