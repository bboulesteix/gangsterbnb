  <!-- Filters for search start -->
  <hr>
  <form class="form-inline filters">
    <%= form_tag hideouts_path, method: :get do %>
      <div class="form-group">
        <%= text_field_tag :min_safety,
          params[:min_safety],
          class: "form-control",
          placeholder: "Sécurité minimum"
        %>
      </div>
      <div class="form-group">
        <%= text_field_tag :max_price,
          params[:max_price],
          class: "form-control",
          placeholder: "Prix maximum"
        %>
      </div>
      <%= submit_tag 'Search', class: "btn btn-default"%>
    <% end %>
  </form>
  <hr>

  <!-- Filters for search end -->

  <div class="main-container">

    <section class="cards-container">
      <div class="row">
        <% @hideouts.each do |hideout| %>
          <div class="col-xs-12 col-sm-6 col-md-4">
            <% if hideout.photo.blank? %>

              <div class="card">
                <%= image_tag('banner.jpg', height: 190, width: 290, crop: :fill, class: 'card-image') %>
                <div class="card-description">
                  <div class="card-name">
                    <h2><%= link_to hideout.name, hideout_path(hideout)%>
                  </div>
                  <div class="card-price">
                    <p><%= hideout.price %> <%= " €" %> </p>
                  </div>
                  <div class="card-safety">
                    <p><%= hideout.safety %> <%= " safety" %></p>
                  </div>
                </div>
              </div>

            <% else %>

              <div class="card">
                <%= cl_image_tag hideout.photo, height: 190, width: 290, crop: :fill, class: 'card-image' %>
                <div class="card-description">
                  <div class="card-name">
                    <h2><%= link_to hideout.name, hideout_path(hideout)%></h2>
                  </div>
                  <div class="card-price">
                    <p><%= hideout.price %> <%= " €" %></p>
                  </div>
                  <div class="card-safety">
                    <p><%= hideout.safety %> <%= " safety" %></p>
                  </div>
                </div>
              </div>

            <% end %>

          </div>
        <% end %>

      </div>
    </section>

    <aside id="map" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>"></aside>

  </div>
