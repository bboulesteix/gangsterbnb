<article>
  <p>Choisis ta planque parmi celles-ci</p>
  <div class="main-container">
    <div class="cards-container">
      <div class="row">
        <% @hideouts.each do |hideout|  %>
          <div class="col-xs-12 col-sm-6 col-md-4">
            <% if hideout.photo.blank? %>
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path "banner.jpg", height: 300, crop: :fill %>')">
                <div class="card-description">
                  <div class="card-name">
                    <%= link_to hideout.name, hideout_path(hideout)%>
                  </div>
                  <div class="card-price">
                    <p><%= hideout.price %> <%= "$" %> </p>
                  </div>
                </div>
              </div>
            <% else %>
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path hideout.photo, height: 300, crop: :fill %>')">
                <div class="card-description">
                <%= link_to hideout.name, hideout_path(hideout)%>
                </div>
                <p><%= hideout.price %></p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div id="map";" data-markers="<%= @markers.to_json %>">
    </div>
  </div>
</article>
